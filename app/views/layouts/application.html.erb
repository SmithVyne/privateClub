<!DOCTYPE html>
<html>
  <head>
    <title>Privateclub</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <% if flash[:notice] %>
      <div class="notice">
        <p class="error"><%= notice %></p>
      </div>
    <% end %>
    <% if flash[:alert] %>
      <div class="alert">
        <p class="error"><%= alert %></p>
      </div>
    <% end %>
    <%= yield %>
  </body>
</html>
